}

void desired_orientation(char current, char desired)
{
	if ((current == UP    && desired == DOWN)  ||
		(current == DOWN  && desired == UP)    ||
		(current == LEFT  && desired == RIGHT) || 
		(current == RIGHT && desired == LEFT)) {
		turn_robot(around);
	} else if ( (current == UP    && desired == RIGHT) || 
				(current == DOWN  && desired == LEFT)  ||
				(current == LEFT  && desired == UP)    ||
				(current == RIGHT && desired == DOWN)) {
		turn_robot(to_the_right);
	} else if ( (current == UP    && desired == LEFT)  ||
				(current == DOWN  && desired == RIGHT) ||
				(current == LEFT  && desired == DOWN)  ||
				(current == RIGHT && desired == UP))   {
		turn_robot(to_the_left);
	}
	orientation = desired;
}

task control()
{
	//this task will control everything
	while (SENSOR_4 != 1); //wait for go signal
	PlayToneEx(440, 150, SOUND_VOLUME, false);
	Wait(250);
	Wait(83);
	int g = 0;
	for (int i = 0; ; i++) {
		if (route_short[i] == 's') {
			break;
		}
		desired_orientation(orientation, route_short[i].c);
		drive_forwards(route_short[i].n, route_short[i].p);
	}
}

task emergency_stop()
{
	while (true) {
		if(ButtonPressed(BTNCENTER, false)) {
			Off(OUT_AC);
			StopAllTasks();
			Off(OUT_AC);
			break;
		}
	}
}

task main() 
{
	//initialise sensors, read commands, launch tasks (control and line_counter)
	init_sensors();
	auto_calibrate();
	PlayToneEx(440, 150, SOUND_VOLUME, false);
	Wait(250);
	PlayToneEx(440, 150, SOUND_VOLUME, false);
	Wait(300);
	Precedes(emergency_stop, control, line_counter);
}