float left_white_offset = 0;
float left_black_offset = 0;
float right_white_offset = 0;
float right_black_offset = 0;
float back_white_offset = 0;
float back_black_offset = 0;

float left_offset = 0;
float right_offset = 0;
float back_offset = 0;
float left_gain = 0;
float right_gain = 0;
float back_gain = 0;

